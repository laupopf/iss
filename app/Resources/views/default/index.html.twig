{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/main.css') }}" type="text/css" />
{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-success">


                {% if app.user != null %}
                  
                    {% include 'navbar.html.twig' with {'var':'true', 'user': app.user.email }  %}
                   
                    {% if character.1 is defined %}
                        <h2> Tabel cu toti angajatii</h2>
                        <table class="table" style=" border: 1px solid white; text-align: center; border-collapse: collapse;">
                            <tr style=" border: 1px solid white; text-align: center;">
                                <th>Nume</th>
                                <th>Prenume</th>
                                <th>Adresa Email</th>
                                <th>Numar de telefon</th>
                                
                            </tr>

                        {% for key, item in character %}
                            <tr style=" border: 1px solid white; text-align: center; border-collapse: collapse;">
                                <td>{{ item.name }}</td>
                                <td>{{ item.surename }}</td>
                                <td>{{ item.email }}</td>
                                <td>{{ item.phone_number }}</td>
                                
                            </tr>
                        {% endfor %}
                        </table>
                    
                    {% else %}
                      
                        <table class="table" style=" border: 1px solid white; text-align: center; border-collapse: collapse;">
                            <tr style=" border: 1px solid white; text-align: center;">
                                <th>Nume</th>
                                <th>Prenume</th>
                                <th>Adresa Email</th>
                                <th>Numar de telefon</th>
                                <th>Incarca Articol<th>
                                
                            </tr>

                        {% for key, item in character %}
                            <tr style=" border: 1px solid white; text-align: center; border-collapse: collapse;">
                                <td>{{ item.name }}</td>
                                <td>{{ item.surename }}</td>
                                <td>{{ item.email }}</td>
                                <td>{{ item.phone_number }}</td>
                                <td>
                   
                                 <form action="{{path('incarca')}}" method="post">
                                    <input type="checkbox" name="message-checkbox[]" id="{{app.user.id}}" value="{{1}}" />
                                    <input class="messages-received-delete-selected1" type="submit" value="{{'Incarca Articol'}}"/>
                                    </form>
                               
                                    </td
                            </tr>
                        {% endfor %}
                        </table>
                     {% endif %}
                {% else %}
                    {% include 'navbar.html.twig' with {'var':'false'} %}
                {%endif %}
            </div>

            {% if app.user == null %}
              <a href="/login" class="btn btn-info"> You need to login to see the list ðŸ˜œðŸ˜œ >></a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}